{
  "appId": "com.electron.muffon",
  "copyright": "Copyright Â© 2020-2024 Aleksey Shpakovsky",
  "win": {
    "icon": "build/icons/icon.ico",
    "target": [
      "nsis",
      "portable"
    ],
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "category": "public.app-category.music",
    "icon": "build/icons/icon.icns",
    "target": [
      "dmg",
      "pkg"
    ]
  },
  "linux": {
    "category": "Audio;AudioVideo",
    "icon": "build/icons/icon.icns",
    "target": [
      "AppImage",
      "deb",
      "flatpak",
      "pacman",
      "rpm"
    ]
  },
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "compression": "ultra",
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "oneClick": false,
    "perMachine": true
  },
  "flatpak": {
    "runtimeVersion": "23.08",
    "baseVersion": "23.08",
    "finishArgs": [
      "--socket=wayland",
      "--socket=fallback-x11",
      "--device=dri",
      "--socket=pulseaudio",
      "--share=network",
      "--system-talk-name=com.electron.muffon",
      "--system-talk-name=org.mpris.MediaPlayer2.com.electron.muffon",
      "--talk-name=org.kde.StatusNotifierWatcher",
      "--talk-name=org.freedesktop.Notifications",
      "--own-name=org.mpris.MediaPlayer2.chromium.instance3"
    ],
    "useWaylandFlags": "true"
  },
  "portable": {
    "artifactName": "${productName}-${version}-${os}-${arch}-portable.${ext}",
  },
  "directories": {
    "buildResources": "build",
    "output": "build_electron"
  },
  "files": [
    "./.env",
    "./electron/**/*",
    "./index.html",
    {
      "from": "./build",
      "to": "./"
    }
  ],
  "protocols": [
    {
      "name": "muffon",
      "schemes": [
        "muffon"
      ],
      "role": "Viewer"
    }
  ]
}
